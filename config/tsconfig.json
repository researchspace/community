{
    "version": "2.0.0",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "platform/app/*": [
                "[[rsDir]]/build/typings/platform/main/web/app/*"
            ],
            "platform/api/*": [
                "[[rsDir]]/build/typings/platform/main/web/api/*"
            ],
            "platform/components/*": [
                "[[rsDir]]/build/typings/platform/main/web/components/*"
            ],
            "platform/*": [
                "[[rsDir]]/build/typings/platform/main/web/*"
            ],
            "typings/*": [
                "[[rsDir]]/typings/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types/",
            "[[rsDir]]/node_modules/@types/"
        ],
        "target": "es6",
        "module": "esnext",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "declaration": false,
        "removeComments": true,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es6"
        ],
        "preserveConstEnums": true,
        "importHelpers": true,
        "jsx": "react",
        "sourceMap": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/main/web/**/*",
        "src/test/web/**/*",
        "[[rsDir]]/typings/**/*"
    ]
}
